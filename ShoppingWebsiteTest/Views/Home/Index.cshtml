@model BasketModel 
@{
    ViewData["Title"] = "Home Page";
}


<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <div id="1001" style="margin-top: 10px">
        <form asp-controller="Home" asp-action="Button">
            <button name="minus" value="1001" type="submit" class="btn btn-default">-</button>
            Item 1
            <button name="plus" value="1001" type="submit" class="btn btn-default">+</button>
            Count = @(Model.ItemDictionary.ContainsKey(1001) ? Model.ItemDictionary[1001].ToString() : "0")
        </form>
    </div>
    <div id="1002" style="margin-top: 10px">
        <form asp-controller="Home" asp-action="Button" id="1002">
            <button name="minus" value="1002" type="submit" class="btn btn-default">-</button>
            Item 2
            <button name="plus" value="1002" type="submit" class="btn btn-default">+</button>
            Count = @(Model.ItemDictionary.ContainsKey(1002) ? Model.ItemDictionary[1002].ToString() : "0")
        </form>
    </div>
    <div id="1003" style="margin-top: 10px">
        <form asp-controller="Home" asp-action="Button" id="1003">
            <button name="minus" value="1003" type="submit" class="btn btn-default">-</button>
            Item 3
            <button name="plus" value="1003" type="submit" class="btn btn-default">+</button>
            Count = @(Model.ItemDictionary.ContainsKey(1003) ? Model.ItemDictionary[1003].ToString() : "0")
        </form>
    </div>
    <div style="margin-top: 10px">
        <form asp-controller="Home" asp-action="Button" id="clear">
            <button name="clear" type="submit" class="btn btn-default">Clear Basket</button>
        </form>
    </div>
</div>


